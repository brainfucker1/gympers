<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECEEF0"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/brands_cat_img"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/nike"
            />

        <TextView
            android:id="@+id/cat_brands_name"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:text="Category name"
            android:textColor="@color/black"
            android:fontFamily="@font/helve_bold"
            />

        <TextView
            android:id="@+id/cat_desc_name"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:text="Description"
            android:textColor="@color/black"
            android:fontFamily="@font/helve_thin"
            />
        
    </LinearLayout>




</androidx.cardview.widget.CardView>